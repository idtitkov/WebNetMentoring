@model IEnumerable<DataAccess.ViewModels.CategoryViewModel>
@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

<table class="table table-striped" ">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Link</th>
            <th scope="col">Direct link</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
        <tr>
            <th scope="row">@category.CategoryId</th>
            <td>@category.CategoryName</td>
            <td>@category.Description</td>
            <td>@Html.ActionLink("See/Edit image", "Image", new { id = category.CategoryId })</td>
            <td>@Html.RouteLink("Link",new { Controller = "Images", Action = $"{category.CategoryId}" }, new { id = category.CategoryId })</td>
        </tr>
        }
    </tbody>
</table>
